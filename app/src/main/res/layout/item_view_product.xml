<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="5dp"
        android:backgroundTint="#f4f6f7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivThumbProd"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_launcher_background" />

            <!--<TextView-->
                <!--android:id="@+id/tvIdProd"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignTop="@+id/ivThumbProd"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:text="productId"-->
                <!--android:textStyle="bold" />-->

            <TextView
                android:id="@+id/tvNameProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="120dp"
                android:text="pName"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuantityProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="pQuantity" />

            <TextView
                android:id="@+id/tvPriceProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameProd"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="pPrice" />

            <TextView
                android:id="@+id/tvDescriptionProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPriceProd"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="pDesc" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>